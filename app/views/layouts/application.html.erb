<!DOCTYPE html>
<html>
<head>
  <title><%= @title.titleize + ' - Tasky' %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <h1><%= link_to 'Tasky', root_path %></h1>
  <ul>
    <% if current_user %>
    <li>
      Hi, <%= link_to h(current_user.name), edit_user_path(current_user) %> [ <%= link_to 'Logout', logout_path %> ]
    </li>
    <% else %>
    <li>
      <%= RPXNow.popup_code('Login', 'tasky', user_sessions_url).html_safe %>
    </li>
    <% end %>
    <li><%= link_to 'Help', page_path('help') %></li>
    <li><%= link_to 'About', page_path('about') %></li>
  </ul>
  <%- flash.each do |name, message| -%>
    <%= content_tag :div, message, :class => "#{name}" %>
  <%- end -%>
  <%= yield %>
</body>
</html>
