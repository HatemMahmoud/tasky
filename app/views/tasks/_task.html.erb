<%= content_tag_for :li, task, :class => task.done? ? 'done' : '' do %>
  <%= link_to image_tag('cross.png'), task, :confirm => "Delete task '#{task.name}'?", :method => :delete, :alt => 'Delete', :title => 'Delete', :class => 'delete' %>
  <%= link_to image_tag('pencil.png'), edit_task_path(task), :alt => 'Edit', :title => 'Edit', :class => 'edit' %>
  <%= link_to "@#{task.context.name}", tasks_path(:context_id => task.context), :class => 'tag' if task.context %>
  <%= link_to task.project.name, tasks_path(:project_id => task.project), :class => 'tag' if task.project %>
  <span class="editable" id="<%= task_path(task.id) %>" rel="task[name]"><%= task.name %></span>
  <span class="date"><%= task.due_at.strftime '%d %b %y' if task.due_at %></span>
<% end %>